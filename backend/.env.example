# ============================================
# Payment Link Platform - Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/payment_link_db?schema=public

# ============================================
# Redis Configuration
# ============================================
# Redis connection string
# Format: redis://host:port or redis://:password@host:port
REDIS_URL=redis://localhost:6379

# ============================================
# JWT Authentication
# ============================================
# Generate strong secrets using: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=7d

# ============================================
# Mansa Transfers API Configuration
# ============================================
# Payment provider API credentials
MANSA_API_BASE_URL=https://api-stage.mansatransfers.com
MANSA_API_KEY=your-mansa-api-key
MANSA_API_SECRET=your-mansa-api-secret

# ============================================
# AWS S3 Configuration (for file storage)
# ============================================
# Used for storing receipt PDFs and other files
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION=us-east-1

# ============================================
# Email Configuration (Gmail SMTP)
# ============================================
# For sending payment receipts and notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
# Optional: Custom "from" address (defaults to EMAIL_USER)
EMAIL_FROM=your-email@gmail.com

# ============================================
# Frontend URL
# ============================================
# URL of the frontend application (for CORS and email links)
FRONTEND_URL=http://localhost:3001

# ============================================
# Webhook Configuration
# ============================================
# Secret for verifying webhook signatures from payment provider
# Generate using: openssl rand -base64 32
WEBHOOK_SECRET=your-webhook-secret-change-this-in-production

# ============================================
# Development/Testing (Optional)
# ============================================
# For testing with a separate test database
# TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5433/payment_link_db_test?schema=public
